{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "ES5",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/preact/**/*",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "filesGlob": ["typings/index.d.ts", "src/**/*"],
  "baseUrl": "types",
  "typeRoots": [
    "types"
  ]
}
